<div class="col-sm-6 col-lg-4">
  <div class="card mb-4">
    <div class=thumbnail>
      <%= link_to image_tag('Neeko.png', class: "img-responsive  img-thumbnail"), posts_path(post) %>
    </div>
    <div class="card-body">
      <h4 class="card-title"><%= post.title %></h4> <!-- タイトル名-->
      <p class="published-by">John Dow</p> <!-- 投稿者 -->
      <p class="date-published"><%= post.created_at %></p> <!-- 投稿日　* !=作成日 -->
      <!-- <p class="card-text"><%= truncate(post.body, length:50) %></p> -->
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <%= link_to '本文を読む', post, class: "btn btn-sm btn-outline-secondary" %>
        </div>
        <small class="text-muted">9 mins</small>
      </div>
    </div>
  </div>
</div>
