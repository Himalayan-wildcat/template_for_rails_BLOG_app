<div class="col-sm-6 col-lg-4">
  <div class="card mb-4">
    <img class="card-img-top" data-src="" alt="Card image cap">
    <div class="card-body">
      <h4 class="card-title"><%= post.title %></h4> <!-- タイトル名-->
      <p class="published-by">John Dow</p> <!-- 投稿者 -->
      <p class="date-published"><%= post.created_at %></p> <!-- 投稿日　* !=作成日 -->
      <p class="card-text"><%= truncate(post.body, length:50) %></p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <button type="button" class="btn btn-sm btn-outline-secondary">本文を読む</button>

        </div>
        <small class="text-muted">9 mins</small>
      </div>
    </div>
  </div>
</div>
